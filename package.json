{
  "name": "online-draft",
  "version": "2.0.0",
  "private": true,
  "packageManager": "pnpm@10.11.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "biome lint app src e2e scripts",
    "lint:fix": "biome check --write app src e2e scripts",
    "test": "vitest",
    "test:unit": "vitest",
    "test:storybook-vitest": "vitest -c vitest.config.storybook.mts",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "type-check": "tsc",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "storybook:test": "test-storybook --url http://127.0.0.1:6006",
    "storybook:test-ci": "pnpm dlx concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"pnpm storybook dev -p 6016 --ci\" \"pnpm dlx wait-on tcp:127.0.0.1:6016 && pnpm dlx wait-on http://127.0.0.1:6016/iframe.html && sleep 3 && pnpm storybook:test --url http://127.0.0.1:6016 --testTimeout 15000 --maxWorkers=4\"",
    "vrt": "reg-suit run",
    "e2e": "playwright test",
    "e2e:no-report": "playwright test --reporter=line",
    "e2e:ui": "playwright test --ui",
    "e2e:debug": "playwright test --debug",
    "e2e:report": "playwright show-report",
    "e2e:codegen": "playwright codegen",
    "upload-secrets": "tsx scripts/upload-secrets.ts",
    "notify:desktop": "tsx scripts/notify-desktop.ts",
    "notify:slack": "tsx scripts/notify-slack.ts"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.19.2",
    "@emotion/react": "^11.14.0",
    "@hookform/resolvers": "5.1.1",
    "@next/third-parties": "^15.3.4",
    "dayjs": "^1.11.13",
    "firebase": "^11.8.1",
    "framer-motion": "^12.16.0",
    "jotai": "2.12.5",
    "next": "15.3.4",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "7.59.0",
    "react-icons": "5.5.0",
    "zod": "3.25.67"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "@chromatic-com/storybook": "3.2.7",
    "@mdx-js/react": "^3.1.0",
    "@octokit/rest": "^22.0.0",
    "@playwright/test": "1.53.1",
    "@storybook/addon-actions": "^9.0.8",
    "@storybook/addon-essentials": "8.6.14",
    "@storybook/addon-onboarding": "8.6.14",
    "@storybook/addon-themes": "8.6.14",
    "@storybook/blocks": "8.6.14",
    "@storybook/experimental-addon-test": "8.6.14",
    "@storybook/experimental-nextjs-vite": "8.6.14",
    "@storybook/react": "8.6.14",
    "@storybook/test": "8.6.14",
    "@storybook/test-runner": "0.23.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.17.57",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "@vitest/browser": "3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "^3.2.3",
    "dotenv": "17.0.0",
    "jsdom": "^26.1.0",
    "msw": "^2.9.0",
    "msw-storybook-addon": "^2.0.4",
    "playwright": "1.53.1",
    "reg-keygen-git-hash-plugin": "0.14.3",
    "reg-notify-github-plugin": "0.14.4",
    "reg-suit": "0.14.4",
    "storybook": "8.6.14",
    "storycap-testrun": "1.0.0",
    "tsx": "4.20.3",
    "tweetnacl": "^1.0.3",
    "tweetnacl-sealedbox-js": "^1.2.0",
    "tweetnacl-util": "^0.15.1",
    "typescript": "^5.8.3",
    "typescript-mcp": "^0.0.14",
    "vitest": "3.2.4"
  }
}
