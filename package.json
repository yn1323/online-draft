{
  "name": "online-draft",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "biome lint app src e2e scripts",
    "lint:fix": "biome check --write app src e2e scripts",
    "test": "vitest",
    "type-check": "tsc",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "storybook:test": "test-storybook --url http://127.0.0.1:6006",
    "storybook:test-ci": "pnpm dlx concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"pnpm storybook dev -p 6016\" \"pnpm dlx wait-on tcp:127.0.0.1:6016 && pnpm dlx wait-on http://127.0.0.1:6016/iframe.html && sleep 3 && pnpm storybook:test --url http://127.0.0.1:6016 --testTimeout 30000 --maxWorkers=8\"",
    "vrt": "reg-suit run",
    "e2e": "playwright test",
    "e2e:no-report": "playwright test --reporter=line",
    "e2e:ui": "playwright test --ui",
    "e2e:debug": "playwright test --debug",
    "e2e:report": "playwright show-report",
    "e2e:codegen": "playwright codegen",
    "upload-secrets": "tsx scripts/upload-secrets.ts",
    "notify:desktop": "tsx scripts/notify-desktop.ts",
    "notify:slack": "tsx scripts/notify-slack.ts"
  },
